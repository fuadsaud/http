#!/usr/bin/env ruby
# encoding: UTF-8

$LOAD_PATH.unshift File.expand_path(File.join(__dir__, '../lib'))

require 'http'
require 'clik'

# Trap SIGINT
force_exit = false

Signal.trap(:INT) do
  exit 1 if force_exit

  force_exit = true

  puts "\nStopping server... interrupt again to exit immediatly".red
  HTTP::Server.stop
  exit 0
end

OPTIONS = {
  dir: __dir__ # Defaults to serving the current dir.
}

def show_help
  puts 'Usage: bundle exec http [-p --port PORT] [-d --dir DIR]'
end

cli '-p --port' => ->(p) { OPTIONS[:port] = p },
    '-d --dir'  => ->(d) { OPTIONS[:dir]  = d },
    '-h --help' => ->    { show_help and exit }

if OPTIONS[:port]
  HTTP::Server.start(OPTIONS[:dir], OPTIONS[:port])
else
  HTTP::Server.start(OPTIONS[:dir])
end
